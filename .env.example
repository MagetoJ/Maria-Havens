# Environment Configuration Template for Maria Havens Hotel & Spa
# Copy this file to .env and fill in your actual values

# PostgreSQL Database Configuration for Render
# Get this from your Render PostgreSQL database dashboard
DATABASE_URL=postgresql://username:password@hostname:port/database_name
DATABASE_URL_INTERNAL=postgresql://username:password@hostname/database_name

# Session Secret Key - Generate a random string for production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Flask Environment
FLASK_ENV=production
FLASK_APP=main.py

# Mail Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@mariahavens.com

# Render Configuration
PORT=10000

# Database Connection Components (for manual configuration if needed)
DB_HOST=your-postgres-host.render.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
PGSSLMODE=require